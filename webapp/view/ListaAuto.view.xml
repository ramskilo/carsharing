<mvc:View xmlns:table="sap.ui.table"
    controllerName="carsharing.controller.ListaAuto"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
	xmlns:l="sap.ui.layout" 	
    xmlns:core="sap.ui.core"
>
	<Shell id="shell">
		<App id="app">

		<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}" showFooter="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{i18n>headerTitleAuto}"/>
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
            <f:header>
			    <f:DynamicPageHeader>
                        <fb:FilterBar id="filterBar" header="Header" reset="onReset" search="onRESTCall" clear="onClear" cancel="onCancel" 
		                filtersDialogClosed = "onFiltersDialogClosed"  showRestoreButton="true" showClearButton="true" showClearOnFB="true">
			                <fb:filterGroupItems>
                                <fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="{i18n>Targa}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input type="Text" id="Targa" ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="{i18n>Modello}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input type="Text" id="Modello" ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>                             

			                </fb:filterGroupItems>	
                        </fb:FilterBar>
			    </f:DynamicPageHeader>
            </f:header>
			<f:content>
                <Table noDataText="{i18n>NoData}" items="{Auto>/}" mode="SingleSelectMaster" selectionChange="onSelectionChange">
                    <columns>
                        <Column>
                            <Text text="{i18n>targa}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>marca}"/>
                        </Column>  
                        <Column>
                            <Text text="{i18n>modello}"/>
                        </Column>     
                        <Column>
                            <Text text="{i18n>classe}"/>
                        </Column>  
                        <Column>
                            <Text text="{i18n>note}"/>
                        </Column>   
                        <Column>
                        </Column>  
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{Auto>targa}" />
                                <Text text="{Auto>marca}" />
                                <Text text="{Auto>modello}" />
                                <Text text="{Auto>classe}" />
                                <Text text="{Auto>note}" />      
                                <Button icon="sap-icon://edit" press="onEdit"/>                                                    
                            </cells>
                        </ColumnListItem>
                    </items>                
                </Table>   
			</f:content>
			<!-- DynamicPage Footer -->
			<f:footer>
               <Toolbar>
                 <Button press="onBack" icon="sap-icon://nav-back" ></Button>
               </Toolbar>
			</f:footer>
		</f:DynamicPage>

		</App>
	</Shell>
</mvc:View>
