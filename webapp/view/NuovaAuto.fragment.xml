<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
      <Dialog
      title="{i18n>dati_auto}">
      <content>
        <Label text="{i18n>targa}" design="Bold"/>
        <Input type="Text" id="targa" />
        <Label text="{i18n>marca}" design="Bold"/>
        <Input type="Text" id="marca" />        
        <Label text="{i18n>modello}" design="Bold"/>
        <Input type="Text" id="modello" />
        <Label text="{i18n>classe}" design="Bold"/>
        <Input type="Text" id="classe" />
        <Label text="{i18n>stato}" design="Bold"/>
        <Input type="Text" id="stato" />           
        <Label text="{i18n>note}" design="Bold"/>
        <Input type="Text" id="note" />     
      </content>
      <buttons>
        <Button type="Reject" icon="sap-icon://decline" press="onClose"/>
        <Button type="Accept" icon="sap-icon://save" press="onSave"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>